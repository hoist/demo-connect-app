{
  "modules": [{
    "name": "pollXero",
    "src": "./_hoist/scripts/pollXero.js"
  }, {
    "name": "postContact",
    "src": "./_hoist/scripts/postContact.js"
  }, {
    "name": "pingLog",
    "src": "./_hoist/scripts/pingLog.js"
  }, {
    "name": "errorTest",
    "src": "./_hoist/scripts/errorTest.js"
  }, {
    "name": "timeoutTest",
    "src": "./_hoist/scripts/timeoutTest.js"
  }],

  "on": {
    "poll:xero": {
      "modules": ["pollXero"]
    },
    "xero:contact": {
      "modules": ["postContact"]
    },
    "ping:me": {
      "modules": ["pingLog"]
    },
    "raise:error": {
      "modules": ["errorTest", "timeoutTest"]
    }
  },
  "endpoints": {
    "/poll/xero": {
      "methods": ["get"],
      "event": "poll:xero"
    },
    "/payment/success": {
      "methods": ["POST"],
      "event": "chargify:payment:success",
      "authenticated": true
    },
    "/:product/getLatestInvoices": {
      "methods": ["GET"],
      "event": "get:invoices",
      "authenticated": true,
      "syncronous": true
    },
    "/throw/error": {
      "methods": ["GET"],
      "event": "raise:error"
    }
  },

  "schedules": {
    "0 0 * * *": {
      "events": [
        "nightly:batch:start"
      ]
    },
    "* * * * *": {
      "events": [
        "ping:me"
      ]
    }
  }
}
